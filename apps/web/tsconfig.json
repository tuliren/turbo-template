{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/lib/*": ["packages/lib/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.cjs",
    "jest.setup.ts",
    "postcss.config.mjs",
    "tailwind.config.cjs"
  ],
  "exclude": ["node_modules"]
}
